<h1 style="text-align: center;">Your Cart</h1>


 <section id="book-a-table" class="book-a-table" style="">
        <table style='margin :0; border-collapse: collapse;'>
            <thead>
                <tr>
                    <th style='padding: 15px; border: 1px solid #ddd;' >Item</th>
                    <th style='padding: 15px; border: 1px solid #ddd; width: 150px;' >Name</th>
                    <th style='padding: 15px; border: 1px solid #ddd;'>Quantity</th>
                    <th style='padding: 15px; border: 1px solid #ddd; width: 150px;'>Price</th>
                </tr>
            </thead>
            <tbody>
                <% @cart.line_items.each do |line_item| %>
                    <tr>
                        <td style='padding: 15px; border: 1px solid #ddd;'>
                            <%= image_tag line_item.product.product_image, class: 'col-lg-6 form-group',  width: '100', height: '100' %>
                        </td>  
                        <td style='padding: 15px; border: 1px solid #ddd; text-align: center;'> <%= line_item.product.name %></td>
                        <td style='padding: 15px; border: 1px solid #ddd; text-align: center;'>
                            <div class="row gy-4">
                                <p class="quantity"><%= line_item.quantity %>X</p>
                            </div>
                        </td>
                        <td style='padding: 15px; border: 1px solid #ddd; text-align: center;'>
                            <h3><%= number_to_currency(line_item.total_price) %></h3>
                        </td>
                    </tr>
                <% end %> 
            </tbody>
        </table>
        <h1>Total:  <%= number_to_currency(@cart.total_price) %></h1>        
</section>

